<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment"
    android:background="@drawable/background_app"
    >

    <LinearLayout
        android:id="@+id/layout_intro"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/pngtree_pink_cute_baby_style_background_picture_image_336061" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_age"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/layout_update1"
        android:visibility="visible">

        <ImageView
            android:id="@+id/btn_age"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/icons8_schedules_64"
            tools:layout_gravity="center" />

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_agesss"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Số Tháng Tuổi" />

            <TextView
                android:id="@+id/txt_age"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Số liệu" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_age_update"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/icons_edit" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_height"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/layout_update2"
        android:visibility="visible">


        <ImageView
            android:id="@+id/btn_height"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/icons8_height_64"
            tools:layout_gravity="center" />

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Chiều Cao" />

            <TextView
                android:id="@+id/txt_height"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Số liệu" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_height_update"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/icons_edit" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_weight"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/layout_update3">

        <ImageView
            android:id="@+id/btn_weight"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/icons8_weight_64"
            android:layout_margin="15dp"
            tools:layout_gravity="center"
            />

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Số Tháng Tuổi" />

            <TextView
                android:id="@+id/txt_weight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Số liệu" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_weight_update"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/icons_edit" />
    </LinearLayout>


</LinearLayout>